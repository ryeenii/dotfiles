#\\\\ all the color vars
[clr]
bg = ${xrdb:color0:#222}
fg = ${xrdb:color5:#222}
fg-2 = ${xrdb:color7:#222}

#\\\\ all the other values
[val]
rad = 5px
rad-2 = 1

[settings]
screenchange-reload = true

[module/clock]
type = internal/date
interval = 1.0
time = %T
format = Ôçé <label>
label = %time%
label-font = 2

[module/date]
type = internal/date
interval = 1.0
date = %a, %b %d %Y 
format = <label>
label = %date%
label-font = 2

[bar/rclock]
override-redirect = true
width = 100
height = 22px
border-size = ${val.rad-2}
border-color = ${clr.fg}
offset-x = 39
offset-y = 6
padding = 2
background = ${clr.bg}
foreground = ${clr.fg}
font-0 = "Roboto Mono Nerd Font:size=8"
font-1 = "Roboto Mono Nerd Font:size=8:weight=bold"
font-2 = "Font Awesome 5 Pro:style=Solid:size=8"
modules-left = clock

[bar/rdate]
override-redirect = true
width = 142
height = 22px
border-size = ${val.rad-2}
border-color = ${clr.fg}
offset-x = 145
offset-y = 6
padding = 2
background = ${clr.bg}
foreground = ${clr.fg}
font-0 = "Roboto Mono Nerd Font:size=8"
font-1 = "Roboto Mono Nerd Font:size=8:weight=bold"
font-2 = "Font Awesome 5 Pro:style=Solid:size=8"
modules-left = date

[bar/volume]
override-redirect = true
width = 142
height = 22px
border-size = ${val.rad-2}
border-color = ${clr.fg}
offset-x = 145
offset-y = 6
padding = 2
background = ${clr.bg}
foreground = ${clr.fg}
font-0 = "Roboto Mono Nerd Font:size=8"
font-1 = "Roboto Mono Nerd Font:size=8:weight=bold"
font-2 = "Font Awesome 5 Pro:style=Solid:size=8"
modules-left = date
